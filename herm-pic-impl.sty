%
% Hoehe: 2 LE Breite: 4 LE
\def\entity{%
  \futurelet\entityLockedAt\entityDecide
}%
\def\entityDecide{%
  \ifx\entityLockedAt *%
    \let\next=\entityb
  \else
    \let\next=\entitya
  \fi
  \next
}%
