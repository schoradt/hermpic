\def\clustera(#1,#2)#3{%
  \ifherm@verbatim%
    \PackageInfo{herm-pic}{Process cluster \string#3 ...}%
  \fi% 
  \put(#1,#2){%
    \put(1,1){%
      \qbezier(-1,0)(-1,.4)(-.7,.7)%
      \qbezier(-.7,.7)(-.4,1)(0,1)%
