                    \fi%
                  \fi%
                \fi%
              \fi%
            \fi%
          \fi%
        \fi
      \fi%
    \fi%
  \fi%
  \herm@length=\herm@dx%
  \ifnum\herm@newx = 0 \herm@length=\herm@dy \fi%
  \ifnum\herm@length < 0 \multiply\herm@length by -1 \fi%
  \put(\herm@sx,\herm@sy){\vector(\herm@newx,\herm@newy){\herm@length}}%
  \put(\herm@ex,\herm@ey){%
