    \herm@tsy=\csname hermobjy@#1 \endcsname%
    \ifherm@verbatim%
      \typeout{      with \the\herm@tsx, \the\herm@tsy}%
    \fi%
  \fi%
  \expandafter\if\csname hermobj@#2 \endcsname 1%
    \ifherm@verbatim%
      \typeout{   \string#2 found}%
    \fi%
    \herm@conerrbfalse%
