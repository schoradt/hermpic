          \ifnum\herm@dxdy < 29 \herm@newx=-1 \herm@newy=-4 \else%
            \ifnum\herm@dxdy < 41 \herm@newx=-1 \herm@newy=-3 \else%
              \ifnum\herm@dxdy < 58 \herm@newx=-1 \herm@newy=-2 \else%
                \ifnum\herm@dxdy < 71 \herm@newx=-2 \herm@newy=-3 \else%
