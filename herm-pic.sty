        \fi
      \else%
        \ifnum\herm@dxdy < 12 \herm@newx=0 \herm@newy=-1 \else%
          \ifnum\dxdy < 29 \herm@newx=1 \herm@newy=-4 \else%
            \ifnum\herm@dxdy < 41 \herm@newx=1 \herm@newy=-3 \else%
